<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

    <ImageView
        android:id="@+id/imvDoc"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/ic_docs" />

    <ImageView
        android:id="@+id/imvClose"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignRight="@+id/imvDoc"
        android:layout_alignTop="@+id/imvDoc"
        android:src="@drawable/ic_close"
        android:visibility="visible" />

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/circleView"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        CircleProgressView:cpv_autoTextSize="true"
        CircleProgressView:cpv_barColor="?attr/colorPrimary"
        CircleProgressView:cpv_barWidth="@dimen/_10sdp"
        CircleProgressView:cpv_fillColor="@android:color/white"
        CircleProgressView:cpv_innerContourSize="0dp"
        CircleProgressView:cpv_maxValue="100"
        CircleProgressView:cpv_outerContourSize="0dp"
        CircleProgressView:cpv_rimColor="?attr/colorAccent"
        CircleProgressView:cpv_rimWidth="@dimen/_11sdp"
        CircleProgressView:cpv_seekMode="true"
        CircleProgressView:cpv_showUnit="true"
        CircleProgressView:cpv_textColor="@android:color/black"
        CircleProgressView:cpv_textScale="1"
        CircleProgressView:cpv_unit="%"
        CircleProgressView:cpv_unitColor="?attr/colorPrimaryDark"
        CircleProgressView:cpv_unitPosition="right_top"
        CircleProgressView:cpv_unitScale="1"
        CircleProgressView:cpv_value="0" />

    </RelativeLayout>

    <!--

        CircleProgressView:cpv_spinColor="?attr/colorPrimary"
        CircleProgressView:cpv_rimColor="?attr/colorPrimary"
    -->
</RelativeLayout>