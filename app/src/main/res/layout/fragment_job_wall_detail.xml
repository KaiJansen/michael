<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/scrollView"
    tools:context=".agent.ui.fragments.JobWallDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Since 1 hour 15 mins" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imvUser"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/ic_user" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_toRightOf="@id/imvUser"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_2sdp">

                        <TextView
                            android:id="@+id/tvName"
                            style="@style/field_header_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fire Insurance"
                            android:textStyle="bold"

                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tvLabelPrefer"
                                style="@style/field_header_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/prefer"

                                />

                            <TextView
                                android:id="@+id/tvLanguage"
                                style="@style/field_header_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="English"
                                android:textStyle="bold" />

                            <naveed.khakhrani.miscellaneous.util.AppButton
                                android:id="@+id/btnCall"
                                style="@style/app_btn"
                                android:layout_marginTop="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="@string/call"
                                android:visibility="gone"

                                app:btn_color="?attr/colorPrimary" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_gps" />

                            <TextView
                                android:id="@+id/tvPostCode"
                                style="@style/field_header_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:text="324454" />

                            <TextView
                                android:id="@+id/tvCountry"
                                style="@style/field_header_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:text="Perak"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_attachment"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/imvUser"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_30sdp"
                android:paddingRight="@dimen/_30sdp">

                <TextView
                    android:id="@+id/tvNameDetail"
                    style="@style/field_header_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tan Ah Kaw"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvlabelNRIC"
                    style="@style/field_header_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LabelNRIC"

                    />

                <TextView
                    android:id="@+id/tvNRIC"
                    style="@style/field_header_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="21323-12-2312" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvlabelPhoneNo"
                        style="@style/field_header_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/LabelPhoneNo"

                        />

                    <TextView
                        android:id="@+id/tvMobile"
                        style="@style/field_header_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="5dp"
                        android:text="+6021323434" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.2" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvLabelPreferDetail"
                        style="@style/field_header_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prefer"

                        />

                    <TextView
                        style="@style/field_header_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tvLanguageDetail"
                        style="@style/field_header_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="English"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/LabelInterestedInsurance"
                        style="@style/field_header_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interested"

                        />

                    <TextView
                        style="@style/field_header_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tvInterestedInsurance"
                        style="@style/field_header_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Fire Insurance"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/LabelIndicativeSum"
                        style="@style/field_header_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quotation_sum"

                        />

                    <TextView
                        style="@style/field_header_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tvIndicativeSum"
                        style="@style/field_header_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="RM 700.00"
                        android:textStyle="bold" />

                </LinearLayout>



                <TextView
                    style="@style/field_header_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_related_doc"
                    android:id="@+id/text1"
                    android:visibility="gone"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_edit"
                    android:padding="@dimen/_1sdp"
                    android:id = "@+id/ChooseFileLayout"
                    android:visibility="gone">

                    <naveed.khakhrani.miscellaneous.util.AppButton
                        android:id="@+id/btnChooseFile"
                        style="@style/app_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_file"
                        android:textColor="@android:color/black"

                        />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rViewUploadedFiles"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:visibility="gone"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_file_upload"
                    android:id="@+id/text2"
                    android:visibility="gone"/>

                <TextView
                    style="@style/field_header_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:drawableRight="@drawable/ic_attachment"
                    android:gravity="center_vertical"
                    android:text="@string/supported_docs"
                    android:id="@+id/text3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/docs">

                    <ImageView
                        android:id="@+id/doc1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/ic_docs"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/doc2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/ic_docs"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/doc3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/ic_docs"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/doc4"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/ic_docs"
                        android:visibility="gone" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/layoutAccept"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="2.1">

                        <naveed.khakhrani.miscellaneous.util.AppButton
                            android:id="@+id/btnAccept"
                            style="@style/app_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/accept"
                            app:btn_color="?attr/colorPrimary"

                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            android:layout_weight="0.1" />

                        <Button
                            android:id="@+id/btnReject"
                            style="@style/app_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_black_boundry_white_inside"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/reject"
                            android:textColor="@android:color/black" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutSend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:visibility="gone"

                        >

                        <EditText
                            android:id="@+id/edtRemarksQuotation"
                            style="@style/edit_txt_multiline"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="left|top"
                            android:hint="@string/quotation_remarks"
                            android:minHeight="@dimen/_100sdp" />

                        <EditText
                            android:id="@+id/edtQuotationTotalSum"
                            style="@style/edit_txt_single_line"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="left|top"
                            android:hint="@string/quotation_total_sum"
                            android:inputType="number" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2.1">

                            <naveed.khakhrani.miscellaneous.util.AppButton
                                android:id="@+id/btnSend"
                                style="@style/app_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/send"
                                app:btn_color="?attr/colorPrimary"

                                />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_weight="0.1" />

                            <Button
                                android:id="@+id/btnClear"
                                style="@style/app_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_black_boundry_white_inside"
                                android:foreground="?attr/selectableItemBackground"
                                android:text="@string/clear"
                                android:textColor="@android:color/black" />


                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layoutQuotationButtons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <naveed.khakhrani.miscellaneous.util.AppButton
                        android:id="@+id/btnQuotAccept"
                        style="@style/app_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/accept"

                        app:btn_color="?attr/colorPrimary" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.1" />

                    <Button
                        android:id="@+id/btnQuotBack"
                        style="@style/app_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_black_boundry_white_inside"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="@string/back"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCompleteButtons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <naveed.khakhrani.miscellaneous.util.AppButton
                        android:id="@+id/btnComplete"
                        style="@style/app_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/complete"

                        app:btn_color="?attr/colorPrimary" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.1" />

                    <Button
                        android:id="@+id/btnCompleteBack"
                        style="@style/app_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_black_boundry_white_inside"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="@string/back"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <naveed.khakhrani.miscellaneous.util.AppButton
                        android:id="@+id/btnBack"
                        style="@style/app_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/back"

                        app:btn_color="?attr/colorPrimary" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
