<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16sdp"
    tools:context="com.insurance.easycover.shared.ui.fragments.VerifyUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <EditText
            android:id="@+id/edtVerifyCode"
            style="@style/edit_txt"
            android:hint="@string/confirmCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <naveed.khakhrani.miscellaneous.util.AppButton
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/app_btn"
            app:btn_color="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:text="@string/verify"
            />

        <naveed.khakhrani.miscellaneous.util.AppButton
            android:id="@+id/btnResendCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/app_btn"
            app:btn_color="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:text="@string/resend"
            />

        <naveed.khakhrani.miscellaneous.util.AppButton
            android:id="@+id/btnSkipVerification"
            style="@style/app_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/skip_verification"
            android:textColor="@android:color/white"
            app:btn_color="?attr/colorPrimary" />

    </LinearLayout>




</FrameLayout>
